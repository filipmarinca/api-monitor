      ]
    },
    {
      "name": "Status Pages",
      "item": [
        {
          "name": "Get Status Page",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/status-pages/:slug",
              "host": ["{{base_url}}"],
              "path": ["status-pages", ":slug"],
              "variable": [
                {
                  "key": "slug",
                  "value": "demo-status"
                }
              ]
            }
          }
        },
        {
          "name": "Create Status Page",
          "request": {
            "method": "POST",
            "header": [
