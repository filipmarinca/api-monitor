              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"slug\": \"my-status\",\n  \"title\": \"My API Status\",\n  \"description\": \"Public status page\",\n  \"public\": true,\n  \"monitorIds\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/status-pages",
